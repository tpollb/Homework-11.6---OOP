        <Button x:Name="Remove_client_button" Content="Remove client" HorizontalAlignment="Left" Margin="682,42,0,0" VerticalAlignment="Top" Width="108" Height="36" Foreground="Black" RenderTransformOrigin="0.509,0.495" FontWeight="Normal"/>
        <Button x:Name="Edit_client_button" Content="Edit client" HorizontalAlignment="Left" Margin="682,83,0,0" VerticalAlignment="Top" Width="108" Height="36" Foreground="Black" RenderTransformOrigin="0.509,0.495" FontWeight="Normal"/>

    </Grid>
</Window>
