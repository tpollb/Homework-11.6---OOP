        xmlns:local="clr-namespace:Homework_11._6___OOP"
        mc:Ignorable="d"
        Title="Clients" Height="450" Width="810">
    <Grid HorizontalAlignment="Center" Width="800" Height="406" VerticalAlignment="Top" Margin="0,19,0,0">
        <DataGrid x:Name="DataGrid1" d:ItemsSource="{d:SampleData ItemCount=20}" AutoGenerateColumns="True" Margin="0,0,123,0"/>
